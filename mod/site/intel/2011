#%Module1.0

### errors
module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]
set approot /opt/intel
set appname "Intel Environment 2011"

### help
proc ModulesHelp { } {
  global appname
  puts stderr "Application : $appname"
}

module-whatis "$appname"

### conflict
if [info exists env(ESZR_COMPILER)] {
  set current $env(ESZR_COMPILER)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

### env
setenv ESZR_COMPILER $module

module load intel/cmp/2011
module load intel/mkl/2011
module load intel/ipp/2011
