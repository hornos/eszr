#%Module1.0

### errors
module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]
set approot /opt/intel
set appname "Intel Environment 2011"

### help
proc ModulesHelp { } {
  global appname
  puts stderr "Application : $appname"
}

module-whatis "$appname"

### conflict
if [info exists env(INTEL_ENVIRONMENT)] {
  set current $env(INTEL_ENVIRONMENT)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

### env
setenv INTEL_ENVIRONMENT $module

module load intel/cmp/2011.4.191
module load intel/mkl/2011.4.191
module load intel/ipp/2011.4.191
