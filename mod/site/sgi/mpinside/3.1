set approot /opt/sgi/MPInside
set appname "MPInside Profiling Tool"
set appdesc "MPInside is an SGI MPI profiling tool"
set appurl  "http://techpubs.sgi.com/library/tpl/cgi-bin/getdoc.cgi?coll=linux&db=bks&fname=/SGI_Developer/MPIinside_UG/ch01.html"
set license SGI

### help
proc ModulesHelp { } {
  global appname release appdesc appurl license
  puts stderr "Application : $appname"
  puts stderr "Description : $appdesc"
  puts stderr "License     : $license"
  puts stderr "URL         : $appurl"
}

module-whatis "$appname"

### conflict
if [info exists env(SGI_MPINSIDE)] {
  set current $env(SGI_MPINSIDE)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

# env
setenv SGI_MPINSIDE $module
setenv SGI_MPINSIDE_HOME $approot

# path
prepend-path LD_LIBRARY_PATH $approot/mpt-$release/lib
prepend-path PATH $approot/mpt-$release/bin
prepend-path MANPATH $approot/mpt-$release/man
