#%Module1.0

### errors
module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]

### eszr
# disabled sue to default rpm install
# if [info exists env(ESZR_PKG)] {
#   set eszr_pkg $env(ESZR_PKG)
# } else {
#   puts stderr "Error: set ESZR_PKG"
#   break
# }
# set approot $eszr_pkg/$module

set approot /opt/sgi/mpt
set appname "SGI MPT (MPI)"
set appdesc "SGI Message Passing Toolkit (MPT)"
set appurl  "http://techpubs.sgi.com/library/tpl/cgi-bin/browse.cgi?cmd=toc&coll=linux&db=bks&pth=/SGI_Developer/MPT_UG"
set license SGI

### help
proc ModulesHelp { } {
  global appname release appdesc appurl license
  puts stderr "Application : $appname"
  puts stderr "Description : $appdesc"
  puts stderr "License     : $license"
  puts stderr "URL         : $appurl"
}

module-whatis "$appname"

### conflict
if [info exists env(ESZR_MPI)] {
  set current $env(ESZR_MPI)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

# env
setenv ESZR_MPI $module
setenv SGI_MPT_HOME $approot

# path
prepend-path LD_LIBRARY_PATH $approot/mpt-$release/lib
prepend-path PATH $approot/mpt-$release/bin
prepend-path MANPATH $approot/mpt-$release/man

# MPI
setenv MPI_ROOT $approot/mpt-$release

# SGI
setenv MPI_BUFS_PER_HOST 8192
setenv MPI_GROUP_MAX 256
